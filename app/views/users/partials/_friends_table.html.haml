.row
  .col-md-9
    %table.table.table-hover.table-bordered.mt-3
      %thead>
        %tr>
          %th{scope: "col"}First Name
          %th{scope: "col"}Last Name
          %th{scope: "col"}Email
          %th.text-center Actions
      - friends.each do |friend|
        %tr
          %td #{friend.first_name}
          %td #{friend.last_name}
          %td #{friend.email}
          %td.text-center
            =link_to "View Profile", user_path(friend), class: %w(btn btn-sm btn-info)
            =link_to "Stop following", friendship_path(friend), method: :delete, data: {confirm: "Are you sure?"}, class: %w(btn btn-sm btn-danger)
