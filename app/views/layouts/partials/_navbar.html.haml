.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container
    = link_to "Finance Tracker", root_path, class: %w(navbar-brand)
    %button.navbar-toggler{type: "button", "aria-controls" => "navbarSupportedContent", "aria-expanded" => false, "aria-label" => "Toggle navigation", data: {toggle: "collapse", target: "#navbarSupportedContent"}}
      %span.navbar-toggler-icon

    .collapse.navbar-collapse#navbarSupportedContent
      %ul.navbar-nav.mr-auto
        - if user_signed_in?
          %li.nav-item.active
            = link_to "Portfolio", my_portfolio_path, class: %w(nav-link)
            %span.sr-only= "(current)"
          %li.nav-item
            = link_to "Friends", my_friends_path, class: %w(nav-link)
          %li.nav-item.dropdown
            %a.nav-link.dropdown-toggle{href: "#", id: "navbarDropdown", role: "button", "data-toggle":"dropdown", "aria-haspopup":true, "aria-expanded": false}
              Profile
            .dropdown-menu{"aria-labelledby": "navbarDropdown"}
              = link_to edit_user_registration_path, class: %w(dropdown-item) do
                .i.fas.fa-edit
                Edit Profile
              %a.dropdown-item{href: "#"}= "Action 2"
              .dropdown-divider
              %a.dropdown-item{href: "#"}= "Action 3"


      %ul.navbar-nav.ml-auto.mr-2

        - if user_signed_in?
          .i.fas.fa-user.user-icon
          %li.nav-item.active
            = link_to "#{current_user.full_name}", my_portfolio_path, class: %w(nav-link)

          =link_to "Logout", destroy_user_session_path, method: :delete, class: %w(btn btn-warning)
